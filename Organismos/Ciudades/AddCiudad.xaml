<Window x:Class="Organismos.Ciudades.AddCiudad"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:converter="clr-namespace:Organismos.Converters"
        Title="Agregar Ciudad"
        Width="315"
        Height="348"
        Loaded="Window_Loaded"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen">
    <Window.Resources>
        <converter:TextValConverter x:Key="textConv" />
    </Window.Resources>
    <Grid>
        <Label Margin="27,34,0,0"
               HorizontalAlignment="Left"
               VerticalAlignment="Top"
               Content="País:" />
        <ComboBox x:Name="CbxPais"
                  Width="255"
                  Margin="27,65,0,0"
                  HorizontalAlignment="Left"
                  VerticalAlignment="Top"
                  DisplayMemberPath="PaisDesc"
                  IsEnabled="False"
                  ItemsSource="{Binding}"
                  SelectedValuePath="IdPais"
                  SelectionChanged="CbxPais_SelectionChanged" />
        <Label Margin="27,117,0,0"
               HorizontalAlignment="Left"
               VerticalAlignment="Top"
               Content="Estado:" />
        <ComboBox x:Name="CbxEstado"
                  Width="255"
                  Margin="27,148,0,0"
                  HorizontalAlignment="Left"
                  VerticalAlignment="Top"
                  DisplayMemberPath="EstadoDesc"
                  IsEnabled="False"
                  ItemsSource="{Binding}"
                  SelectedValuePath="IdEstado" />
        <Label Margin="27,196,0,0"
               HorizontalAlignment="Left"
               VerticalAlignment="Top"
               Content="Ciudad" />
        <TextBox x:Name="TxtCiudad"
                 Width="255"
                 Height="23"
                 Margin="27,227,0,0"
                 HorizontalAlignment="Left"
                 VerticalAlignment="Top"
                 LostFocus="TxtCiudad_LostFocus"
                 Text="{Binding CiudadDesc,
                                Converter={StaticResource textConv}}"
                 TextWrapping="Wrap" />
        <Button x:Name="BtnSalir"
                Width="75"
                Margin="114,277,0,0"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Click="BtnSalir_Click"
                Content="Cancelar"
                IsCancel="True" />
        <Button x:Name="BtnGuardar"
                Width="75"
                Margin="207,277,0,0"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Click="BtnGuardar_Click"
                Content="Guardar"
                IsDefault="True" />

    </Grid>
</Window>
