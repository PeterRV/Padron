<Window x:Class="Funcionarios.Resources.Historial"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:UIControls="clr-namespace:UIControls;assembly=UIControls"
        xmlns:filter="http://schemas.bolapansoft.com/xaml/Controls/ItemsFilter"
        Title="Historial"
        Width="900"
        Height="700">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="190" />
        </Grid.RowDefinitions>


        <UIControls:SearchTextBox Grid.Row="0"
                                  Width="250"
                                  Margin="0,0,0,0"
                                  HorizontalAlignment="Left"
                                  VerticalAlignment="Top"
                                  LabelText="Buscar obra..."
                                  TextWrapping="Wrap" />

        <filter:FilterDataGrid Grid.Row="1"
                               HorizontalAlignment="Stretch"
                               VerticalAlignment="Stretch" />


    </Grid>
</Window>
